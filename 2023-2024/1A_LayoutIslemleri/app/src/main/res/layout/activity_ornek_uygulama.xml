<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnCikarma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrnekUygulama">

    <EditText
        android:id="@+id/editsayi1"
        android:layout_width="249dp"
        android:layout_height="77dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="1. Sayıyı Giriniz"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editSayi2"
        android:layout_width="251dp"
        android:layout_height="76dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="2. Sayıyı Giriniz"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/editsayi1"
        app:layout_constraintTop_toBottomOf="@+id/editsayi1" />

    <Button
        android:id="@+id/btnToplama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Toplama"
        app:layout_constraintStart_toStartOf="@+id/editSayi2"
        app:layout_constraintTop_toBottomOf="@+id/editSayi2" />

    <Button
        android:id="@+id/btnToplama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Çıkarma"
        app:layout_constraintEnd_toEndOf="@+id/editSayi2"
        app:layout_constraintTop_toBottomOf="@+id/editSayi2" />

    <Button
        android:id="@+id/btnCarpma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Çarpma"
        app:layout_constraintStart_toStartOf="@+id/btnToplama"
        app:layout_constraintTop_toBottomOf="@+id/btnToplama" />

    <Button
        android:id="@+id/btnBolme"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:text="Bölme"
        app:layout_constraintEnd_toEndOf="@+id/btnToplama"
        app:layout_constraintTop_toBottomOf="@+id/btnToplama" />

    <TextView
        android:id="@+id/txtSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="410dp" />
</androidx.constraintlayout.widget.ConstraintLayout>