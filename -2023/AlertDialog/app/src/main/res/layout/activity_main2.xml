<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/txt_hos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="71dp"
        android:text="Hoşgeldiniz"
        app:layout_constraintBottom_toTopOf="@+id/btn_cikis"
        app:layout_constraintEnd_toEndOf="@+id/btn_cikis"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cikis"
        android:layout_width="139dp"
        android:layout_height="0dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="23dp"
        android:onClick="cikis"
        android:text="Çıkış Yap"
        app:layout_constraintBottom_toTopOf="@+id/say"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="343dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_cikis"
        app:layout_constraintTop_toBottomOf="@+id/btn_cikis" />
</androidx.constraintlayout.widget.ConstraintLayout>